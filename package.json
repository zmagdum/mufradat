{
  "name": "mufradat",
  "version": "1.0.0",
  "description": "Quranic Vocabulary Learning App",
  "private": true,
  "workspaces": [
    "mobile",
    "backend",
    "shared"
  ],
  "scripts": {
    "mobile": "cd mobile && npm start",
    "backend": "cd backend && npm run build",
    "test": "npm run test --workspaces",
