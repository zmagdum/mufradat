{
  "name": "mufradat-backend",
  "version": "1.0.0",
  "description": "AWS Backend for Mufradat App",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "cdk": "cdk",
    "cdk:synth": "cdk synth",
    "cdk:diff": "cdk diff",
    "cdk:deploy": "cdk deploy --all",
    "cdk:destroy": "cdk destroy --all",
    "bootstrap:local": "cd infrastructure && STAGE=local AWS_ACCESS_KEY_ID=test AWS_SECRET_ACCESS_KEY=test AWS_DEFAULT_REGION=us-east-1 AWS_ENDPOINT_URL=http://localhost:4566 npx cdklocal bootstrap aws://000000000000/us-east-1",
    "deploy:local": "cd infrastructure && STAGE=local AWS_ACCESS_KEY_ID=test AWS_SECRET_ACCESS_KEY=test AWS_DEFAULT_REGION=us-east-1 AWS_ENDPOINT_URL=http://localhost:4566 bash -c 'npx cdklocal bootstrap aws://000000000000/us-east-1 2>&1 | grep -v \"already bootstrapped\\|already exists\" || true; npx cdklocal deploy --all --require-approval never'",
    "deploy:dev": "./scripts/deploy-dev.sh",
    "deploy:prod": "./scripts/deploy-prod.sh",
    "localstack:start": "docker compose up -d",
    "localstack:stop": "doocker compose down",
    "localstack:logs": "docker compose logs -f localstack",
    "localstack:restart": "docker compose restart localstack",
    "localstack:clean": "docker compose down -v && rm -rf localstack-data",
    "vocabulary:import": "ts-node scripts/import-vocabulary-data.ts",
    "vocabulary:summary": "ts-node scripts/import-vocabulary-data.ts --summary",
    "vocabulary:delete": "ts-node scripts/delete-vocabulary-data.ts",
    "vocabulary:diagnose": "ts-node scripts/diagnose-import.ts"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.478.0",
    "@aws-sdk/client-dynamodb": "^3.478.0",
    "@aws-sdk/client-elasticache": "^3.478.0",
    "@aws-sdk/client-s3": "^3.478.0",
    "@aws-sdk/client-ses": "^3.940.0",
    "@aws-sdk/client-sqs": "^3.478.0",
    "@aws-sdk/lib-dynamodb": "^3.478.0",
    "@aws-sdk/s3-request-presigner": "^3.478.0",
    "@types/bcryptjs": "^2.4.6",
    "aws-cdk-lib": "^2.115.0",
    "aws-lambda": "^1.0.7",
    "bcryptjs": "^3.0.3",
    "constructs": "^10.3.0",
    "csv-parse": "^5.6.0",
    "jsonwebtoken": "^9.0.2",
    "redis": "^4.6.11",
    "source-map-support": "^0.5.21",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/jest": "^29.5.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/source-map-support": "^0.5.10",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "aws-cdk": "^2.115.0",
    "aws-cdk-local": "^2.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
